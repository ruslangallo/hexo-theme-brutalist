.content
  max-width: $max-width
  line-height: 1.5
  margin: 0 auto
  padding: 0 1rem

.post
  &__header
    margin-bottom: 2rem

  &__title
    margin-bottom: 0

  &__meta
    color: $color-light

  &__body
    img, video
      max-width: 100%
      height: auto
      display: block
      margin: auto

    /* http://webdesignerwall.com/tutorials/css-elastic-videos */
    .video-container
      position: relative
      padding-top: (9 / 16 * 100)% // 16:9 ratio
      height: 0
      overflow: hidden

      iframe, object, embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        margin-top: 0

    blockquote
      background: inherit;
      color: #ccffb6
      border-left: 0px solid #ccc;
      margin: 1rem 10px;
      padding: 0.5em 10px;
      quotes: "\201C""\201D""\2018""\2019"

      p
        margin: 0

      &:before
        color: #ccffb6;
        content: "\201C";
        font-size: 2em;
        line-height: 0.1em;
        margin-right: 0.25em;
        vertical-align: -0.4em

      footer
        color: #666
        font-size: 11px
        margin: line-height 0

        a
          color: #666
          background-image: linear-gradient(transparent, transparent 5px, #666 5px, #666)

        a:hover
          color: #999
          background-image: linear-gradient(transparent, transparent 4px, #999 4px, #999)

        cite
          &:before
            content: "â€”"
            padding: 0 0.5em

    .pullquote
      text-align: left
      width: 45%
      margin: 0

      &.left
        margin-left: 0.5em
        margin-right: 1em

      &.right
        margin-right: 0.5em
        margin-left: 1em

    .caption
      color: $color-light
      display: block
      font-size: 0.9em
      margin-top: 0.5em
      position: relative
      text-align: center

  &__meta
    color: $color-lightest
    margin-right: 1rem


.post-tag
  .tag-link
    &:before
      content: "#"

.post-list
	padding: 0

	&__item
		list-style-type: none
		margin-left: 0
		margin-bottom: 1rem

	&__meta
		color: $color-lightest
		min-width: 100px
		margin-right: 16px

.post-item
  margin-bottom: 2rem

  &__header
    margin-bottom: 1rem

  &__title
    margin-bottom: 0

    a
      color: inherit
      
    a:hover
      text-decoration: none

  &__meta
    color: $color-lightest
    min-width: 100px
    margin-right: 16px
