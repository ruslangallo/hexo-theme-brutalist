.highlight
  font-family: $font-family-mono;
  padding: 10px 15px
  overflow-x: auto
  margin: 1rem 0 1rem 0

  figcaption
    zoom: 1
    font-size: 0.9em
    color: #999

    a
      float: right

    &:before,
      content: ""
      display: table

    &:after
      clear: both

  pre
    padding: 0
    border: none
    background: none

  table, th, td
    border: none

  table
    width: auto
    margin: 0

  td.gutter
    text-align: right
    padding: 0 1rem 0 0

  td.code
    padding: 0

  .line
  	height: 1.375rem
