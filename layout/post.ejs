<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <header class="post__header">
    <%- partial('_partial/post/title', { post: page, list: false, className: `post__title` }) %>
    <div class="post__meta">
      <%- partial('_partial/post/date', { post: page, className: `post__date` }) %>
      <%- partial('_partial/post/author', { post: page, className: `post__author` }) %>
      <%- partial('_partial/post/tag') %>
    </div>
  </header>
  <%- partial('_partial/post/gallery') %>
  <div class="post__body" itemprop="articleBody">
    <%- page.content %>
  </div>
</article>
<%- partial('_partial/comments') %>
