<% title = post.title || "Untitled" %>
<% if (slug === 'index') { %>
  <h3 class="<%= class_name %>" itemprop="name headline">
    <%= title %>
  </h3>
<% } else if (slug === 'archive') { %>
  <% if (post.link) { %>
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= title %></a>
  <% } else { %>
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= title %></a>
  <% } %>
<% } else { %>
  <h1 class="<%= class_name %>" itemprop="name headline">
    <%= title %>
  </h1>
<% } %>
